<%= flash[:success] %>
<%= render 'books/list', books: @books, book: @book %>


  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors
     <% @book.errors.full_messages.each do |message| %>
      <%= message %>
     <% end %>
  <% end %>

<div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>

      <table class="table table-striped">
        <thead>
        <tr>

        </tr>
        </thead>
        <tbody>
         <tr>
          <td>
           <%= link_to user_path(@book.user) do %>
           <%= attachment_image_tag(@book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'100x100') %></br>
           <%= @book.user.name %>
           <% end %>
          </td>
          <td>
           <%= link_to @book.title, "/books/#{@book.id}" %>
          </td>
          <td>
           <%= @book.body %>
          </td>
         <% if @book.id == current_user.id %>
          <td>
            <%= link_to "Edit",edit_book_path(@book.id), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy",book_path(@book.id), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %>
          </td>
         <% end %>
         </tr>
        </tbody>
      </table>
</div>